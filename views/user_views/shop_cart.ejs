      <script>

        function outOfStock(){
            let hasOutOfStockProduct = false;
            document.querySelectorAll('.subtotal').forEach(elem=>{
                const productId = elem.getAttribute('data-productId');
                const quantityElement = document.querySelector(`.qty-val[data-productId="${productId}"]`);
                const quantity = parseInt(quantityElement.textContent, 10);
                const productStock = parseInt(quantityElement.getAttribute('data-stock'), 10);
                const subTotalElement =   document.querySelector(`.subtotalElement[data-productId="${productId}"]`);
                const outOfStockElement = document.querySelector(`.out-of-stock-element[data-productId="${productId}"]`);
                const quantityUpButton = document.querySelector(`.qty-up[data-productId="${productId}"]`);
                const proceedCheckout = document.querySelector('.checkout-button');
                const dontCheckout = document.querySelector('.dont-checkout');
                const rupeeSign = document.querySelector('.rupee-sign');
                const noTotal = document.querySelector('.no-total');

                console.log('Quantity:', quantity);
                console.log('Product Stock:', productStock);

                if(quantity > productStock){
                    subTotalElement.style.display = 'none';
                    outOfStockElement.style.display = 'inline';
                    hasOutOfStockProduct = true;

                }else{
                    subTotalElement.style.display = 'inline';
                    outOfStockElement.style.display = 'none';
                }
                if (hasOutOfStockProduct) {
                    proceedCheckout.style.display = 'none';
                    dontCheckout.style.display = 'inline';
                    rupeeSign.style.display = 'none'
                    noTotal.style.display = 'inline'
                } else {
                    proceedCheckout.style.display = 'inline';
                    dontCheckout.style.display = 'none';
                    rupeeSign.style.display = 'inline'
                    noTotal.style.display = 'none'
                }

            });
        }
        outOfStock();

        function grandTotal(){
            let grandTotal = 0;
            // const quantityElement = document.querySelector(`.qty-val[data-productId="${productId}"]`);
            // const quantity = parseInt(quantityElement.textContent, 10);
            // const productStock = parseInt(quantityElement.getAttribute('data-stock'), 10);
            document.querySelectorAll('.subtotal').forEach((elem)=>{
                // if(quantity > productStock){
                //     elem.textContent = 0;
                // }
                grandTotal += Number(elem.textContent)
            })
            document.querySelector('#grand-total').innerHTML = grandTotal;
        }
        grandTotal();
    

        document.addEventListener('DOMContentLoaded', function () {
        const qtyUp = document.querySelectorAll('.qty-up').forEach(element => {
        element.addEventListener('click', (event) => {
        event.preventDefault();
        var productId = element.getAttribute('data-productId');
        var quantityElement = document.querySelector(`.qty-val[data-productId="${productId}"]`);
        var quantity = parseInt(quantityElement.textContent, 10);
        quantity += 1;
        quantityElement.textContent = quantity;

        updateServerQuantity(productId, quantity, element);
    });
});

    const qtyDown = document.querySelectorAll('.qty-down').forEach(element => {
    element.addEventListener('click', (event) => {
        event.preventDefault();
        var productId = element.getAttribute('data-productId');
        var quantityElement = document.querySelector(`.qty-val[data-productId="${productId}"]`);
        var quantity = parseInt(quantityElement.textContent, 10);
        if (quantity > 1) {
            quantity -= 1;
            quantityElement.textContent = quantity;

            updateServerQuantity(productId, quantity, element);
        }
    });
});


    
      function updateServerQuantity(productId, quantity, element) {
    fetch('/updateCart', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({
            productId: productId,
            quantity: quantity,
        }),
    })
    .then(response => {
        if (!response.ok) {
            throw Error('Network response was not ok');
        }
        return response.json();
    })
    .then((data)=>{
        if(data.subTotal){
            const row = element.closest('tr');
            const subTotal = row.querySelector('.subtotal')
            subTotal.textContent = data.subTotal;
        grandTotal();
        outOfStock();
        }
        
    })
    
}

    const cartDelete = document.querySelectorAll('.cart-remove').forEach(remove=>{
        remove.addEventListener('click', (e)=>{
        e.preventDefault();
        var productId = remove.getAttribute('data-productId');

        
        fetch(`/removeFromCart?productId=${productId}`, {method: 'POST'})

        .then((response)=>{
            if(!response.ok){
                throw new Error(`HTTP error! status:${response.status}`)
            }
        return response.json();
        })
        .then(data=>{
            if(data.success){
                window.location.reload()
            }
        })
        })
    })

    });
    
      </script>
