    <main class="main">
        <div class="page-header breadcrumb-wrap">
          <div class="container">
            <div class="breadcrumb">
              <a href="/" rel="nofollow">Home</a>
              <span></span> Your Cart
            </div>
          </div>
        </div>
        <section class="mt-50 mb-50">
          <div class="container">
            <div class="row">
              <div class="col-12">
                <%if(cartLength > 0){%>
                  <div class="table-responsive">
                    <table class="table shopping-summery text-center clean">
                      <thead>
                        <tr class="main-heading">
                          <th scope="col">Image</th>
                          <th scope="col">Name</th>
                          <th scope="col">Price</th>
                          <th scope="col">Quantity</th>
                          <th scope="col">Subtotal</th>
                          <th scope="col">Remove</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% for(let i = userCart.products.length - 1; i >= 0; i--) { %>
                          <tr>
                            <td class="image product-thumbnail">
                              <img class="thumbnail"
                                src="<%= userCart.products[i].productId.productImage[0]?.path %>"
                                alt="" />
                            </td>
                            <td class="product-des product-name">
                              <h5 class="product-name">
                                <a href="/productDetails/<%= userCart.products[i].productId._id %>">
                                  <%=userCart.products[i].productId.productName%>
                                </a>
                              </h5>
                              <p class="font-xs">
                                <%= userCart.products[i].productId.brand.brandName %>
                              </p>
                            </td>
                            <td class="price" data-title="Price">₹
                                <% if (userCart.products[i].productId.offerStatus == 'Active' &&  userCart.products[i].productId.startDate <= Date.now() && userCart.products[i].productId.endDate > Date.now()) { %>
                                    <span><%= userCart.products[i].productId.salePrice - (userCart.products[i].productId.salePrice * userCart.products[i].productId.discountPercentage) / 100 %></span>
                                <% }else{ %>
                                    <span><%=userCart.products[i].productId.salePrice%></span> 
                                    <% } %>
                              </td>
                            <td class="text-center" data-title="Stock">
                              <div class="detail-qty border radius m-auto">
                                <a href="#" class="qty-down qty-button" data-productId="<%= userCart.products[i].productId._id %>">
                                    <i class="fi-rs-angle-small-down"></i>
                                </a>
                                <span class="qty-val" data-productId="<%= userCart.products[i].productId._id %>"
                                    data-stock="<%= userCart.products[i].productId.stock %>">
                                    <%= userCart.products[i].quantity %>
                                </span>
                                <a href="#" class="qty-up qty-button" data-productId="<%= userCart.products[i].productId._id %>">
                                    <i class="fi-rs-angle-small-up"></i>
                                </a>
                              </div>
                            </td>
                        <td class="text-right" data-title="Subtotal">
                            <div class="subtotalElement" data-productId="<%= userCart.products[i].productId._id %>" >₹
                                <% if (userCart.products[i].productId.offerStatus == 'Active' && userCart.products[i].productId.endDate > Date.now()) { %>
                                    <span id="Subtotal" class="subtotal" data-productId="<%= userCart.products[i].productId._id %>">
                                        <%= userCart.products[i].productId.salePrice * userCart.products[i].quantity - (userCart.products[i].productId.salePrice * userCart.products[i].productId.discountPercentage) / 100 *  userCart.products[i].quantity %>
                                    </span>
                                <% }else{ %>
                                    <span id="Subtotal" class="subtotal" data-productId="<%= userCart.products[i].productId._id %>">
                                        <%= userCart.products[i].productId.salePrice * userCart.products[i].quantity %>
                                    </span>
                                    <% } %>
                            </div>
                            <div class="out-of-stock-element" data-productId="<%= userCart.products[i].productId._id %>" >
