                                icon: 'error',
                                title: data.error,
                                showConfirmButton: false,
                                timer: 1500
                                });
                                // window.location.href = '/login';
                            }
                        }).catch(error => {
                            window.location.href = '/login'
                            console.error("Error:", error);
                        });

                    })
                    
                });

                addtoCart.forEach(add => {
