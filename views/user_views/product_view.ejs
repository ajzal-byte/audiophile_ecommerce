        <section class="mt-50 mb-50">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="product-detail accordion-detail">
                            <div class="row mb-50">
                                <div class="col-md-6 col-sm-12 col-xs-12">
                                    <div class="detail-gallery">
                                        <span class="zoom-icon"><i class="fi-rs-search"></i></span>
                                        <!-- MAIN SLIDES -->
                                        <div class="product-image-slider">
                                            <% for (let i = 0; i < product_details.productImage.length; i++) { %>
                                            <figure class="border-radius-10" style="width: 300px;">
                                                <img src="<%= product_details.productImage[i]?.path %>" alt="<%= product_details.productName %>" class="img-fluid" loading="lazy">
                                            </figure>
                                            <% } %>
                                        </div>
                                        <!-- THUMBNAILS -->
                                        <div class="slider-nav-thumbnails pl-15 pr-15">
                                            <% for (let i = 0; i < product_details.productImage.length; i++) { %>
                                            <div>
                                                <img src="<%= product_details.productImage[i]?.path %>" alt="<%= product_details.productName %>" class="img-fluid" loading="lazy">
                                            </div>
                                            <% } %>
                                        </div>        
                                    </div>
                                    <!-- End Gallery -->
                                </div>
                                <div class="col-md-6 col-sm-12 col-xs-12">
                                    <div class="detail-info">
                                        <h2 class="title-detail"><%= product_details.productName %></h2>
                                        <div class="product-detail-rating">
                                            <div class="pro-details-brand">
                                                <span> Brands: <a><%= product_details.brand?.brandName %></a></span>
                                            </div>
                                        </div>
                                        <div class="clearfix product-price-cover">
                                            <div class="product-price primary-color float-left">
                                                <% if (product_details.offerStatus == 'Active' &&  product_details.startDate <= Date.now() && product_details.endDate > Date.now()) { %>
                                                    <ins><span class="text-brand">₹<%= product_details.salePrice - (product_details.salePrice * product_details.discountPercentage) / 100 %></span></ins>
                                                    <ins><span class="old-price font-md ml-15">₹<%= product_details.salePrice%></span></ins>
                                                    <span class="save-price  font-md color3 ml-15"><%= product_details.discountPercentage %>% Off</span>
                                            <% }else{ %>
                                                <ins><span class="text-brand">₹<%= product_details.salePrice %></span></ins>
                                                <% } %>
                                            </div>
                                        </div>
                                        <div class="bt-1 border-color-1 mt-15 mb-15"></div>
                                        <!-- <div class="short-desc mb-30">
                                            <p>Lorem ipsum dolor, sit amet consectetur adipisicing elit. Aliquam rem officia, corrupti reiciendis minima nisi modi, quasi, odio minus dolore impedit fuga eum eligendi? Officia doloremque facere quia. Voluptatum, accusantium!</p>
                                        </div> -->

                                        <div class="bt-1 border-color-1 mt-30 mb-30"></div>
                                        <div class="detail-extralink">
                                            
                                            <div class="product-extra-link2">
                                                <% if( product_details.stock > 0 ){%>
                                                    <button type="submit" class="button button-add-to-cart" data-product-id="<%= product_details._id %>" id="addtoCart">Add to cart</button>
                                                <% }else{ %>
                                                <button style="opacity: 0.7;" class="button button-add-to-cart" >Out of Stock</button>
                                                <% } %>
                                                <a id="add-to-wishlist" aria-label="Add To Wishlist" class="action-btn hover-up" data-product-id="<%= product_details._id %>"><i class="fi-rs-heart"></i></a>
                                            </div>
                                        </div>
                                        <ul class="product-meta font-xs color-grey mt-50">
                                            <li class="mb-5">Category: <a class="text-capitalize" href="#"><%= product_details.category?.categoryName%></a></li>
                                            <li class="mb-5">Form Factor: <a href="#"><%= product_details.formfactor%></a></li>
                                            <% if(product_details.stock>0){ %>
                                            <li>Availability:<span class="in-stock text-success ml-5"><%= product_details.stock%> Items In Stock</span></li>
                                            <% }else{ %>
                                            <li>Availability:<span class="in-stock text-danger ml-5">Out of Stock</span></li>
                                            <% } %>
                                        </ul>
                                    </div>

                                    <script>
                                        document.addEventListener("DOMContentLoaded", ()=>{
                                            const addtoCart = document.querySelectorAll('#addtoCart');
                                            const addtoWishlist = document.querySelectorAll('#add-to-wishlist');


                                            addtoWishlist.forEach(add => {
                                                add.addEventListener('click', (e)=>{
                                                    e.preventDefault()
                                                    const productId = add.getAttribute('data-product-id')
                                                    console.log(productId);
                                                    fetch(`/addtoWishlist?productId=${productId}`,{method:'POST'} )
                                                    .then((response)=>{
                                                        if(!response.ok){
                                                        throw new Error(`HTTP error! status: ${Response.status}`)
                                                        }
                                                        return response.json();
                                                    })

                                                    .then((data)=>{
                                                        console.log("Response from server", data);
                                                        console.log('here')
                                                        if(data.message){
                                                        Swal.fire({
                                                        position: 'top-center',
                                                        icon: 'success',
                                                        title: data.message,
                                                        showConfirmButton: false,
                                                        timer: 1500
                                                    });
                                                        }else if (data.error){
                                                            Swal.fire({
                                                            position: 'top-center',
                                                            icon: 'error',
                                                            title: data.error,
                                                            showConfirmButton: false,
                                                            timer: 1500
                                                            });
                                                            // window.location.href = '/login';
                                                        }
                                                    }).catch(error => {
                                                        window.location.href = '/login'
                                                        console.error("Error:", error);
                                                    });

                                                })
                                                
                                            });
            
                                            addtoCart.forEach(add => {
                                                add.addEventListener('click', (e)=>{
                                                    e.preventDefault()
                                                    const productId = add.getAttribute('data-product-id')
                                                    console.log(productId);
                                                    fetch(`/addtoCart?productId=${productId}`,{method:'POST'} )
                                                    .then((response)=>{
                                                        if(!response.ok){
                                                          throw new Error(`HTTP error! status: ${Response.status}`)
                                                        }
                                                        return response.json();
                                                    })
            
                                                    .then((data)=>{
                                                        console.log("Response from server", data);
                                                        console.log('here')
                                                        if(data.message){
                                                        Swal.fire({
                                                        position: 'top-center',
                                                        icon: 'success',
                                                        title: data.message,
                                                        showConfirmButton: false,
                                                        timer: 1500
                                                    });
                                                        }else if (data.error){
                                                            window.location.href = '/login';
                                                        }
                                                    }).catch(error => {
                                                        console.error("Error:", error);
                                                    });         
            
                                                })
                                                
                                            });
                                        });
                                    </script>


                                    <!-- Detail Info -->
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-10 m-auto entry-main-content">
                                    <h2 class="section-title style-1 mb-30">Description</h2>
