<head>
    <meta charset="utf-8">
    <title>Invoice</title>
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta property="og:title" content="">
    <meta property="og:type" content="">
    <meta property="og:url" content="">
    <meta property="og:image" content="">
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="user_assets/imgs/theme/favicon.webp">
    <!-- Template CSS -->
    <link rel="stylesheet" href="user_assets/css/maind134.css?v=3.4">
</head>


<body>
    <div class="container mt-3">
        <div class="row mt-4">
            <div class="col-12">
                <button id="printButton" class="btn btn-primary">
                    Print Invoice
                </button>
                <a href="/profile"><button class="btn btn-success">Go Back</button></a>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-12">
                <h1>Invoice</h1>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-6">
                <h5>Sold by : </h5>
                <p>audiophile. E-Commerce</p>
                <p>123 Main Street</p>
                <p>Ernakulam, Kerala, 682040</p>
                <p>Email: audiophile@gmail.com</p>
            </div>
            <div class="col-6">
                <h5>To : </h5>
                <p><%=order.address.name%></p>
                <p><%=order.address.landMark%></p>
                <p><%=order.address.city%>, <%=order.address.state%>, <%=order.address.pincode%></p>
                <p><%=order.address.phone%></p>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-12">
                <p>Order ID: <%=order.referenceId%> </p>
                <p>Order Date: <%=order.createdOn%> </p>
                <p> Order Status : 
                    <% if (order.orderStatus === "Delivered") { %>
                        <span class="badge rounded-pill alert-success"><%=order.orderStatus%></span>
                        <%}else if(order.orderStatus === "Cancelled"){%>
                          <span class="badge rounded-pill alert-danger"><%=order.orderStatus%></span>
                        <%}else if(order.orderStatus === "Returned"){%>
                          <span class="badge rounded-pill alert-success"><%=order.orderStatus%></span>
                        <%}else{%>
                          <span class="badge rounded-pill alert-warning"><%=order.orderStatus%></span>
                        <%}%>
                </p>
                <p>Payement Status : <%=order.paymentStatus%></p>
                <p>Payement Method : <%=order.paymentMethod%></p>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">Item</th>
                            <th scope="col">Description</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Price</th>
                            <th scope="col">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%if(order){%>
                            <%order.products.forEach((product)=>{%>
                                <tr>
                                    <td><%=product.productId.productName%></td>
                                    <td><%=product.productId.description%></td>
                                    <td><%=product.quantity%></td>
                                    <td><%=product.productId.salePrice%></td>
                                    <td><%= product.productId.salePrice * product.quantity %></td>
                                </tr>
                            <%})%>
                        <%}else{%>
                            <tr>
                                <h3>No Order Found</h3>
                            </tr>
                        <%}%>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row mt-4 mb-5">
            <div class="col-3">
                <h4>GROSS AMOUNT</h4>
                <h4>₹ <%=order.totalAmount%></h4>
            </div>
            <div class="col-3">
                <h4>DISCOUNT</h4>
                <h4>₹ Discount feature will be available</h4>
            </div>
            <div class="col-3">
                <h4>TOTAL</h4>
                <h4>₹ <%=order.totalAmount%></h4>
            </div>
        </div>
    </div>
</body>
<script>
    document
        .getElementById("printButton")
        .addEventListener("click", function () {
            window.print();
        });
</script>

</html>