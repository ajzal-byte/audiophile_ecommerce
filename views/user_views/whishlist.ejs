    <main class="main">
        <div class="page-header breadcrumb-wrap">
            <div class="container">
                <div class="breadcrumb">
                    <a href="/" rel="nofollow">Home</a>
                    <span></span>Wishlist
                </div>
            </div>
        </div>
        <section class="mt-50 mb-50">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="table-responsive">
                          <% if (userWishlist?.products?.length > 0) { %>
                            <table class="table shopping-summery text-center">
                                <thead>
                                    <tr class="main-heading">
                                        <th scope="col" colspan="2">Product</th>
                                        <th scope="col">Price</th>
                                        <th scope="col">Stock Status</th>
                                        <th scope="col">Action</th>
                                        <th scope="col">Remove</th>
                                    </tr>
                                </thead>
                                <tbody>
                                   
                                    <% userWishlist.products.forEach(product => { %>
                                      
                                      <tr>
                                        <td class="image product-thumbnail"> <a href="/productDetails/<%= product.productId._id %>"><img src="<%= product.productId.productImage[0]?.path %>"></a> </td>
                                        <td class="product-des product-name">
                                          <h5 class="product-name"><a href="/productDetails/<%= product.productId._id %>">
                                            <%=product.productId.productName%>
                                          </a></h5>
                                          <p class="font-xs"><%= product.productId.brand.brandName %>
                                          </p>
                                        </td>
                                        <% if (product.productId.offerStatus == 'Active' &&  product.productId.startDate <= Date.now() && product.productId.endDate > Date.now()) { %>
                                            <td class="price" data-title="Price"><span>₹<%= product.productId.salePrice - (product.productId.salePrice * product.productId.discountPercentage) / 100%> </span></td>
                                        <% }else{ %>
                                            <td class="price" data-title="Price"><span>₹<%= product.productId.salePrice%> </span></td>
                                        <% } %>
                                        <td class="text-center" data-title="Stock">
                                            <% if (product.productId.stock > 0) { %>
                                            <span class="color3 font-weight-bold">In Stock</span>
                                            <% }else{ %>
                                            <span class="color3 font-weight-bold text-danger">Out of Stock</span>
                                            <% } %>
                                        </td>
                                        <td class="text-right" data-title="Cart">
                                        <% if (product.productId.stock > 0) { %>
                                            <button id="addtoCart" data-product-id="<%= product.productId._id%>" class="btn btn-sm"><i class="fi-rs-shopping-bag mr-5"></i>Add to cart</button>
                                        <% }else{ %>
                                            <button disabled class="btn btn-sm"><i class="fi-rs-shopping-bag mr-5"></i>Out of Stock</button>
                                        <% } %>
                                        </td>
                                        <td class="action wishlist-remove" data-product-id="<%= product.productId._id%>" data-title="Remove"><a href="#"><i class="fi-rs-trash"></i></a></td>
                                      </tr>
                                      <% }) %>
                                    </tbody>
                                  </table>
                                  <% }else{ %>
                                    <h2>No items in the wishlist</h2>
                                    <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>


