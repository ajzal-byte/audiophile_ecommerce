<script>
    document.addEventListener("DOMContentLoaded", ()=>{
        const createBrand = document.getElementById('createBrand');

        createBrand.addEventListener('click', (e)=>{
            e.preventDefault();


            if(validateForm()){
            const brandName = document.getElementById('brandName').value;
            console.log(brandName);
            fetch(`/admin/addBrands?brandName=${brandName}`, {method: 'POST'})

            .then((response)=>{
                    if(!response.ok){
                        throw new Error(`HTTP error! status: ${response.status}`);
                    }
                    return response.json();
                })

                .then((data) => {
                console.log("Response from server", data);
                if (data.success) {
                    window.location.href = "/admin/brands";
                } else if (data.error) {
                    Swal.fire({
                        position: 'top-center',
                        icon: 'error',
                        title: data.error,
                        showConfirmButton: false,
                        timer: 1500
                    });
                }
            })
            .catch(error => {
                console.error("Error:", error);
            });
            }

        })

        function validateForm(){
            resetErrorMessages();

            const brandNameInput= document.getElementById('brandName').value;
            const brandName = brandNameInput.trim();
            if (/^\d/.test(brandName)) {
                showError('brandNameError', 'Brand name cannot start with a number');
                return false;
            }

            if (brandName !== brandNameInput) {
                showError('brandNameError', 'Brand name cannot have whitespaces');
                return false;
            }

            if (brandName.length === 0) {
                showError('brandNameError', 'Brand name cannot be empty');
                return false;
            }
            return true;
        }

        // Function to show error message
        function showError(elementId, message) {
            const errorElement = document.getElementById(elementId);
            errorElement.textContent = message;
            errorElement.style.color = 'red';
        }  

        // Function to reset error messages
        function resetErrorMessages() {
        const errorElements = document.querySelectorAll('.error-message');
        errorElements.forEach((element) => {
            element.textContent = '';
        });
        }



    });


</script>









